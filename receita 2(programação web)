      /* Estilo geral para links */
      a.link {
        color: blue; /* Cor padrão dos links */
        text-decoration: none; /* Remove sublinhado */
        font-weight: bold; /* Torna o texto em negrito */
        transition: color 0.3s ease; /* Adiciona transição suave */
      }

      /* Estilo para links visitados */
      a.link:visited {
        color: purple; /* Cor dos links já visitados */
      }

      /* Estilo para o link ao passar o mouse */
      a.link:hover {
        color: red; /* Cor dos links ao passar o mouse */
        text-decoration: underline; /* Adiciona sublinhado ao hover */
      }

      /* Estilo para links clicados */
      a.link:active {
        color: darkred; /* Cor para links durante o clique */
      }

      /* Estilo para as imagens dentro de div com classe "poeta" */
      .poeta img {
        width: 50px; /* Largura do avatar */
        height: 50px; /* Altura do avatar */
